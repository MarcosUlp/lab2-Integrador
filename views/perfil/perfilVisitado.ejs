<main class="perfil">
  <!-- ENCABEZADO DEL PERFIL VISITADO -->
  <section class="perfil-header">
    <div class="perfil-avatar">
      <% if (perfil.foto_perfil) { %>
        <img src="<%= perfil.foto_perfil %>" alt="Foto de perfil">
      <% } else { %>
        <div class="avatar-placeholder">👤</div>
      <% } %>
    </div>

    <div class="perfil-info">
      <h2><%= perfil.username %></h2>
      <p class="bio">
        📌 Intereses: cerámica, macramé, textiles <br>
        📝 “Crear es mi forma de respirar.” <br>
        📍 Rosario, Santa Fe
      </p>
    </div>
  </section>

  <!-- BOTÓN DE SOLICITUD DE AMISTAD -->
  <div class="acciones-usuario">
    <% if (!sigue) { %>
      <form id="formSolicitud" action="/solicitudes/enviar/<%= perfil.usuario_id %>" method="POST" class="form-accion">
        <button id="botonSolicitud" type="submit" class="btn-accion">🤝 Enviar solicitud de amistad</button>
      </form>
    <% } else if (sigue === 'pendiente') { %>
      <p id="estadoSolicitud">📨 Solicitud enviada</p>
    <% } else if (sigue === 'aceptado') { %>
      <p id="estadoSolicitud">✅ Ya son amigos</p>
    <% } %>
  </div>

  <!-- ÁLBUMES -->
  <section class="albumes">
    <h3>Álbumes de <%= perfil.username %></h3>

    <% 
      const mostrarAlbumes = sigue === 'aceptado' || albumes.some(a => a.modo_publico); 
      const albumesFiltrados = albumes.filter(a => sigue === 'aceptado' || a.modo_publico);
    %>

    <% if (!mostrarAlbumes) { %>
      <p>Solo los amigos pueden ver los álbumes.</p>
    <% } else if (albumesFiltrados.length === 0) { %>
      <p>Este usuario no tiene álbumes disponibles.</p>
    <% } else { %>
      <% albumesFiltrados.forEach(album => { %>
        <div class="album">
          <h4><%= album.titulo %></h4>
          <% if (album.modo_publico) { %><p class="album-publico">🌍 álbum público</p><% } %>

          <% const imagenesAlbum = imagenes.filter(img => img.albumes_id === album.albumes_id); %>
          <% if (imagenesAlbum.length > 0) { %>
            <div class="imagenes-album-grid">
              <% imagenesAlbum.forEach(img => { %>
                <div class="imagen-con-comentarios">
                  <img src="<%= img.archivo %>" alt="Imagen del álbum" class="imagen-album" />

                  <!-- Comentarios -->
                  <% if (img.comentarios && img.comentarios.length > 0) { %>
                    <div class="comentarios">
                      <% img.comentarios.forEach(c => { %>
                        <p>
                          <% if (c.foto_perfil) { %>
                            <img src="<%= c.foto_perfil %>" alt="Foto de perfil" class="comentario-avatar">
                          <% } else { %>
                            <span>🧑</span>
                          <% } %>
                          <strong><%= c.username %>:</strong> <%= c.contenido %>
                        </p>
                      <% }) %>
                    </div>
                  <% } else { %>
                    <p class="sin-comentarios">Sin comentarios.</p>
                  <% } %>

                  <!-- Formulario para comentar -->
                  <form action="/comentar/<%= img.imagenes_id %>" method="POST" class="form-comentario">
                    <input type="text" name="contenido" placeholder="Escribí un comentario" required>
                    <button type="submit">Comentar</button>
                  </form>
                </div>
              <% }) %>
            </div>
          <% } else { %>
            <p>Álbum sin imágenes.</p>
          <% } %>
        </div>
      <% }) %>
    <% } %>
  </section>
</main>

<script>
  const form = document.getElementById('formSolicitud');
  const boton = document.getElementById('botonSolicitud');

  if (form && boton) {
    form.addEventListener('submit', async (e) => {
      e.preventDefault();

      try {
        const res = await fetch(form.action, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
            'X-Requested-With': 'XMLHttpRequest'
          },
          body: JSON.stringify({})
        });

        if (res.ok) {
          form.innerHTML = '<p>📨 Solicitud enviada</p>';
        } else {
          const error = await res.text();
          alert('Error al enviar la solicitud: ' + error);
        }
      } catch (err) {
        console.error(err);
        alert('Hubo un problema al enviar la solicitud.');
      }
    });
  }
</script>
