<main class="perfil">
  <section class="perfil-header">
    <div class="perfil-avatar">
      <% if (user.foto_perfil) { %>
        <img src="<%= user.foto_perfil %>" alt="Foto de perfil">
        <% } else { %>
          <div class="avatar-placeholder">👤</div>
          <% } %>
    </div>

    <div class="perfil-info">
      <h2>
        <%= user.username %>
      </h2>
      <p class="bio">
        📌 Intereses: cerámica, macramé, textiles <br>
        📝 “Crear es mi forma de respirar.” <br>
        📍 Rosario, Santa Fe
      </p>
    </div>

  </section>

  <!-- FOTO DE PERFIL -->
  <div class="acciones-usuario">

  <!-- Formulario para subir foto de perfil -->
  <form action="/usuarios/subir-perfil" method="POST" enctype="multipart/form-data" class="form-accion">
    <label class="file-label">
      📸 Elegir nueva foto de perfil
      <input type="file" name="foto_perfil" accept="image/*" required hidden>
    </label>
    <button type="submit" class="btn-accion">Cambiar foto de perfil</button>
  </form>

  <!-- Formulario para ver solicitudes de amistad -->
  <form action="/solicitudes/pendientes" method="GET" class="form-accion">
    <button type="submit" class="btn-accion">🤝 Ver solicitudes de amistad</button>
  </form>

</div>


  <!-- SUBIR ÁLBUM -->
  <section class="subir-album">
    <h2>🎨 Subí un nuevo álbum</h2>

    <form action="/imagenes/subiralbum" method="POST" enctype="multipart/form-data">
      <input type="text" name="titulo" placeholder="Nombre del álbum" required>

      <div class="dropzone">
        <p>⬇️ Arrastrá o seleccioná imágenes</p>
        <input type="file" name="imagenes" multiple accept="image/*" required>
      </div>

      <label class="publico-checkbox">
        <input type="checkbox" name="modo_publico" value="1">
        álbum público 🌍
      </label>

      <div class="etiquetas-checkboxes">
        <h3>Elegí etiquetas:</h3>
        <div class="checkbox-etiquetas">
          <% etiquetas.forEach(etiqueta=> { %>
            <label class="checkbox-tag">
              <input type="checkbox" name="etiquetas" value="<%= etiqueta.etiquetas_id %>">
              <%= etiqueta.nombre %>
            </label>
            <% }) %>
        </div>
      </div>

      <button type="submit">➕ Subir álbum</button>
    </form>
  </section>


  <!-- ALBUMES CON IMÁGENES Y COMENTARIOS -->
  <section class="albumes-usuario">
    <h2>Mis álbumes</h2>

    <% if (albumes.length===0) { %>
      <p>No tienes ningun album.</p>
      <% } else { %>
        <% albumes.forEach(album=> { %>

          <div class="album">

            <h3>
              <%= album.titulo %>
            </h3>
            <% if (album.modo_publico) { %>
              <p class="album-publico">🌍 album publico</p>
              <% } %>
                <!-- Mostrar etiquetas -->
                <% const etiquetas=etiquetasPorAlbum[album.albumes_id] || []; %>
                  <% if (etiquetas.length> 0) { %>
                    <p class="etiquetas">
                      <% etiquetas.forEach(et=> { %>
                        <span class="etiqueta">#<%= et %></span>
                        <% }) %>
                    </p>
                    <% } else { %>
                      <p class="sin-etiquetas">Sin etiquetas</p>
                      <% } %>
                        <% const imagenesAlbum=imagenes.filter(img=> img.albumes_id === album.albumes_id); %>

                          <% if (imagenesAlbum.length> 0) { %>
                            <div class="imagenes-album-grid">
                              <% imagenesAlbum.forEach(img=> { %>
                                <div class="imagen-con-comentarios">
                                  <img src="<%= img.archivo %>" alt="Imagen del álbum" class="imagen-album" />

                                  <% if (img.comentarios && img.comentarios.length> 0) { %>
                                    <div class="comentarios">
                                      <% img.comentarios.forEach(c=> { %>
                                        <p>
                                          <% if (c.foto_perfil) { %>
                                            <img src="<%= c.foto_perfil %>" alt="Foto de perfil"
                                              class="comentario-avatar">
                                            <% } else { %>
                                              <span>🧑</span>
                                              <% } %>
                                                <strong>
                                                  <%= c.username %>:
                                                </strong>
                                                <%= c.contenido %>
                                        </p>
                                        <% }) %>
                                    </div>
                                    <% } else { %>
                                      <p class="sin-comentarios">Sin comentarios.</p>
                                      <% } %>

                                        <!-- Formulario para comentar -->
                                        <form action="/comentar/<%= img.imagenes_id %>" method="POST"
                                          class="form-comentario">
                                          <input type="text" name="contenido" placeholder="Escribí un comentario" required>
                                          <button type="submit">Comentar</button>
                                        </form>
                                </div>
                                <% }) %>
                            </div>
                            <% } else { %>
                              <p>Álbum sin imágenes.</p>
                              <% } %>
          </div>
          <% }) %>
            <% } %>
  </section>
</main>